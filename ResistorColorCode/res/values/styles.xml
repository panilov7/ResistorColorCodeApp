<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="scrollvew">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Button Styles -->
    <style name="btn_small" parent="android:attr/buttonStyleSmall">
        <item name="android:layout_margin">@dimen/color_buttons_margins</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>=
    </style>

    <style name="btn_empty" parent="btn_small">
        <item name="android:background">@drawable/btn_empty</item>
    </style>

    <style name="btn_black" parent="btn_small">
        <item name="android:background">@drawable/btn_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/btn_black</item>
    </style>

    <style name="btn_brown" parent="btn_small">
        <item name="android:background">@drawable/btn_brown</item>
